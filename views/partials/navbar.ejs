      <a href="/faqs" class="item">FAQs</a>
        
		<div class="right item">
		
			<a class="ui inverted button" href='/login' id='login-menu' style='display:none'>Log in</a>
        
		
			<span id='office-menu' style='display:none'>
			<div class="ui inline dropdown">
				<div class="text">
					<img id='user-img' class="ui avatar image">
					<span id="user-account"></span>
				</div>
				
				<i class="dropdown icon"></i>
				
				<div class="menu">
					
					<a class="item" href='/office/account'>
						<i class="user icon"></i>
						Account
					</a>
	  
					<a class="item" href='/office/wallet'>
						<i class="dollar icon"></i>
						Wallet
					</a>
					
					<a class="item" href='/office/discussions?tab=personal'>
						<i class="envelope outline icon"></i>
						Messages
					</a>
	  
					<a class="item" id="logout-btn">
						<i class="sign out alternate icon"></i>
						Log out
					</a>
	  
				</div>
			</div>
			</span>

		
		</div>	
	
	</div>
  </div>
  
    
<script>
	
	
	
  $(document).ready(function() {
	
	
	<% if(typeof user == 'object' && user){ %>
		
		window.user_data = <%- JSON.stringify(user) %>
		
	<% } %>
	
	
	if( typeof user_data == 'object' && user_data ) {
		$('#office-menu').show();
		var account = user_data.username;
	
		$('#user-account').text(account);
		$('#user-img').attr('src', "https://steemitimages.com/u/" + account + "/avatar")
	
	} else { 
		$('#login-menu').show();
	}
	
	
      $('.ui.menu .ui.dropdown').dropdown({
        on: 'hover'
      });
      $('.ui.menu a.item')
        .on('click', function() {
          $(this)
            .addClass('active')
            .siblings()
            .removeClass('active')
          ;
        });
  });
  
  $('#logout-btn').click(function() {
	window.location.href = '/login';
  });
</script>

